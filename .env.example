# Audio Transcriber Configuration
# Copy to .env and modify as needed

# === Transcription Engine ===
TRANSCRIBER_MODEL_NAME=large-v3-turbo  # tiny, base, small, medium, large-v3, large-v3-turbo
TRANSCRIBER_DEVICE=auto                # auto, cpu, cuda
TRANSCRIBER_COMPUTE_TYPE=int8          # int8 (CPU), float16 (CUDA), float32
TRANSCRIBER_LANGUAGE=                  # Empty = auto-detect. Examples: en, sw, fr, de

# === Performance ===
TRANSCRIBER_SPEED_PRESET=balanced      # fast, balanced, accurate
TRANSCRIBER_BATCH_SIZE=4               # 1-16, higher = faster but more RAM
TRANSCRIBER_CPU_THREADS=0              # 0 = auto-detect physical cores
TRANSCRIBER_BEAM_SIZE=3                # 1=fastest, 5=most accurate

# === Output ===
TRANSCRIBER_OUTPUT_FORMAT=txt          # txt, srt, vtt, json
TRANSCRIBER_WORD_TIMESTAMPS=true

# === Features ===
TRANSCRIBER_ENABLE_DIARIZATION=false   # Requires pyannote.audio + HuggingFace token

# === Database ===
TRANSCRIBER_DATABASE_URL=sqlite:///transcriptions.db
# TRANSCRIBER_DATABASE_URL=postgresql://user:pass@localhost:5432/transcriber

# === Storage ===
# TRANSCRIBER_MODELS_DIR=~/.transcriber/models

# === Logging ===
TRANSCRIBER_LOG_LEVEL=WARNING          # DEBUG, INFO, WARNING, ERROR

# === Diarization (optional) ===
# TRANSCRIBER_HF_TOKEN=hf_your_token_here
