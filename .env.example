# AudioBench Configuration
# Copy to .env and modify as needed

# === Transcription Engine ===
AUDIOBENCH_MODEL_NAME=large-v3-turbo  # tiny, base, small, medium, large-v3, large-v3-turbo
AUDIOBENCH_DEVICE=auto                # auto, cpu, cuda
AUDIOBENCH_COMPUTE_TYPE=int8          # int8 (CPU), float16 (CUDA), float32
AUDIOBENCH_LANGUAGE=                  # Empty = auto-detect. Examples: en, sw, fr, de

# === Performance ===
AUDIOBENCH_SPEED_PRESET=balanced      # fast, balanced, accurate
AUDIOBENCH_BATCH_SIZE=4               # 1-16, higher = faster but more RAM
AUDIOBENCH_CPU_THREADS=0              # 0 = auto-detect physical cores
AUDIOBENCH_BEAM_SIZE=3                # 1=fastest, 5=most accurate

# === Output ===
AUDIOBENCH_OUTPUT_FORMAT=txt          # txt, srt, vtt, json
AUDIOBENCH_WORD_TIMESTAMPS=true

# === Features ===
AUDIOBENCH_ENABLE_DIARIZATION=false   # Requires pyannote.audio + HuggingFace token

# === Database ===
AUDIOBENCH_DATABASE_URL=sqlite:///transcriptions.db
# AUDIOBENCH_DATABASE_URL=postgresql://user:pass@localhost:5432/transcriber

# === Storage ===
# AUDIOBENCH_MODELS_DIR=~/.audiobench/models

# === Logging ===
AUDIOBENCH_LOG_LEVEL=WARNING          # DEBUG, INFO, WARNING, ERROR

# === Diarization (optional) ===
# AUDIOBENCH_HF_TOKEN=hf_your_token_here
